@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css">
<script src="~/js/register.js"></script>

<div id="register-wrapper">
    <div id="register-container">
        <h1 class="form-title">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" role="alert" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="Input.Email">Correo Electrónico</label>
                <input asp-for="Input.Email" autocomplete="username" aria-describedby="emailHelp" placeholder="name@example.com" type="email" id="inputEmail">
                <span asp-validation-for="Input.Email" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Contraseña</label>
                <div class="password-container">
                    <input asp-for="Input.Password" autocomplete="new-password" placeholder="Contraseña" type="password" id="inputPassword">
                    <i class="fa-solid fa-eye" id="toggle-password"></i>
                </div>
                <span asp-validation-for="Input.Password" class="error-message"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                <div class="password-container">
                    <input asp-for="Input.ConfirmPassword" autocomplete="new-password" placeholder="Confirmar contraseña" type="password" id="inputConfirmPassword">
                    <i class="fa-solid fa-eye" id="toggle-confirm-password"></i>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="error-message"></span>
            </div>
            
            <div class="form-group terms-conditions">
                <input class="checkbox" type="checkbox" id="acceptTerms">
                <a asp-controller="Terminos_condiciones" asp-action="Index" class="terms-link">Aceptar Términos y Condiciones</a>
            </div>
            
            <button id="registerSubmit" type="submit">Crear Ahora</button>
        </form>
        <hr>
        <p class="login-redirect">¿Ya tienes cuenta? <a  asp-page="./Login">Inicia sesión</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}