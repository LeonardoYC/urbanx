@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/login.css">
<script src="~/js/login.js"></script>

<div id="login-wrapper">
    <div id="login-container">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <h4>Bienvenido a UrbanX</h4>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" role="alert"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" type="email" autocomplete="username" aria-required="true" id="inputEmail" placeholder="name@example.com">
                <span asp-validation-for="Input.Email" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Contraseña</label>
                <div class="password-container">
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" id="inputPassword" type="password" placeholder="Contraseña">
                    <i class="fa-solid fa-eye" id="toggle-password"></i>
                </div>
                <span asp-validation-for="Input.Password"></span>
            </div>
            <div class="checkbox form-group remember-password">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            
            <div class="form-group forgot-password">
                <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
            </div>
            <button class="boton_ingresar" id="login-submit" type="submit">Ingresar</button>
        </form>
        <hr>
        <p class="texto_login">¿No tienes una cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate</a></p>
        <div class="confirm-email">
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
