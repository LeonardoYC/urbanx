@model urbanx.Models.Producto

@{
    ViewData["Title"] = "Ultimo Producto de la Sesion";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
        <h1>>@ViewData["Title"]</h1>
        <div class="container">
                <div class="col-sm-4">
                <div class="card mb-3">
                    <div class="card-body">
                    <div class="card-img-actions">
                        <img class="img-responsive" width="96" height="150"
                        src="@Html.DisplayFor(model => model.ImageURL)"  />
                    </div>
                    </div>
                    <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
                    <h5 class="card-title">@Html.DisplayFor(model => model.Precio)</h5>
                    <a class="btn btn-primary" asp-action="Add" asp-route-id="@Model.Id">Add</a>
                    </div>
                </div>
                </div>
        </div>

</body>
</html>