@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<li class="opciones_celular_2 boton_registrar">
    @if (SignInManager.IsSignedIn(User)){
        <a asp-area="" asp-controller="Carrito" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i> Carrito</a>

    }else{
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    }
</li>

<li class="opciones_celular_2 boton_login">
    @if (SignInManager.IsSignedIn(User)){
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    }else{
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</li>